{
  "name": "second-brain-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "validate": "node validate-all.mjs",
    "validate:ai": "node validate-ai-processing.mjs",
    "start": "concurrently \"npm run dev --workspace=apps/web\" \"npm run dev --workspace=@second-brain/backend\"",
    "start:prod": "concurrently \"npm run start --workspace=apps/web\" \"npm run start --workspace=@second-brain/backend\"",
    "start:stack": "concurrently \"npm run dev --workspace=apps/web\" \"npm run dev --workspace=@second-brain/backend\""
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^9.2.1",
    "prettier": "^3.0.0",
    "turbo": "^1.10.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@tiptap/extension-bubble-menu": "^3.15.3",
    "playwright": "^1.57.0",
    "use-debounce": "^10.1.0"
  }
}
